{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: clang build active file",
      "command": "/Library/Developer/CommandLineTools/usr/bin/g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/Library/Developer/CommandLineTools/usr/bin/g++"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    }
  ]
}
